---
interface Props {
	p1: string;
	p2: string;

}

const { p1 , p2 } = Astro.props;
---

<div class="bg-[#ff9d42] hover:scale-105 transition-all cursor-pointer " >
    <div class="bg-[#19a28d]  w-full text-white md:text-3xl sm:text-1xl text-base font-bold py-3" >
        <p>{p1}</p>
    </div>
    <div class="w-full text-[#203162] md:text-2xl sm:text-lg text-sm text-left font-medium p-5  " >
        <p>{p2}</p>
    </div>
</div>