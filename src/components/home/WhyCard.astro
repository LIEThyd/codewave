---
interface Props {
	p1: string;
	p2: string;

}

const { p1 , p2 } = Astro.props;
---

<div class="bg-[#ff9d42] hover:scale-105 transition-all cursor-pointer " >
    <div class="bg-[#19a28d]  w-full text-white  sm:text-2xl text-lg font-bold py-3" >
        <p>{p1}</p>
    </div>
    <div class="w-full text-[#203162] text-3xl text-left font-medium p-5  " >
        <p>{p2}</p>
    </div>
</div>