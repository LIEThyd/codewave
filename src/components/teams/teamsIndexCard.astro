---
interface Props {
	src: string;
	name: string;
	desg: string;
	twitter: string;
	github: string;
	linkedin: string;
	pageLink: string;



}

const { src,name,desg,twitter,github,linkedin,pageLink } = Astro.props;
---

<div class="p-4 lg:w-1/4 md:w-1/2">
    <div class="h-full flex flex-col items-center text-center">
        <a href={pageLink} >
            <img alt="team" class="flex-shrink-0 rounded-lg w-full h-96  mb-4"
            src={src}>
        </a>
        
        <div class="w-full">
            <h2 class="title-font font-medium  sm:text-2xl text-lg text-[#ABD7FF] ">{name}</h2>
            <h3 class="text-[#86c3f8a1] my-3">{desg}</h3>
            <div class="grid grid-cols-2">
                <span class="inline-flex">
                    <a class="text-white">
                        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                            stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                            <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
                        </svg>
                    </a>
                    <a class="ml-2 text-white">
                        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                            stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                            <path
                                d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z">
                            </path>
                        </svg>
                    </a>
                    <a class="ml-2 text-white">
                        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                            stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                            <path
                                d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z">
                            </path>
                        </svg>
                    </a>
                </span>
                <a href={pageLink} class="mb-4 text-cyan-300">Read More....</a>

            </div>

        </div>
    </div>
</div>

<style>
img{
		filter: grayscale(1);
        cursor: pointer;

        
	}
    img:hover{
        filter: grayscale(0.3);
}
</style>
