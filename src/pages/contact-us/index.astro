---
import Layout from "../../layouts/Layout.astro";


---

<script>
       const submitAlert = ()=>{
    alert('Form is Submitted');
}
    const submitBtn = document.getElementById("submit")
    submitBtn.addEventListener("submit",submitAlert)
 
</script>
<Layout title="Contact Us | CodeWave Hub">
    <section class="text-gray-600 body-font relative">
        <div class="container px-5 py-24 mx-auto flex md:flex-nowrap flex-wrap">
          <div class="lg:w-2/3 md:w-1/2 w-full  md:h-auto h-96 rounded-lg overflow-hidden sm:mr-10 p-10 flex items-end justify-start relative">
            <iframe width="100%" height="100%" class="absolute inset-0" frameborder="0" title="map" marginheight="0" marginwidth="0" scrolling="no" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d60935.220368643204!2d78.36745!3d17.342005!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb95ee6c4680d5%3A0x1890088c6b779e63!2sLords%20Institute%20of%20Engineering%20%26%20Technology!5e0!3m2!1sen!2sin!4v1696506409065!5m2!1sen!2sin" style="filter: grayscale(0.5) "></iframe>
            <div class="bg-white relative grid lg:grid-cols-2 md:grid-cols-1 sm:grid-cols-2 grid-cols-1 mx-auto py-6 rounded shadow-md">
              <div class="px-6 mt-4 lg:mt-0">
                <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs">EMAIL</h2>
                <a class="text-indigo-500 leading-relaxed break-words ">lead.codewavehub@lords.ac.in</a>
               
              </div>
              <div class="px-6 mt-4 lg:mt-0">
                
                <h2 class="title-font font-semibold text-gray-900 tracking-widest text-xs ">PHONE</h2>
                <p class="leading-relaxed">+91 87121 05568</p>
              </div>
            </div>
          </div>
          
          <form class="lg:w-1/3 md:w-1/2 bg-white flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0" action="https://formsubmit.co/lead.codewavehub@lords.ac.in" method="POST" >
            <input type="hidden" name="_next" value="/">
            <input type="hidden" name="_captcha" value="false">
            <input type="hidden" name="_subject" value="CodeWave Hub contact form ">
            <input type="hidden" name="_template" value="table">
            <h2 class="text-gray-100 text-3xl mb-1 font-bold title-font uppercase">Contact Us</h2>
            <div class="relative mb-4">
              <label for="name" class="leading-7 text-sm text-gray-300">Name</label>
              <input required type="text" id="name" name="name" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="relative mb-4">
              <label for="email" class="leading-7 text-sm text-gray-300">Email</label>
              <input required type="email" id="email" name="email" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="relative mb-4">
              <label for="message" class="leading-7 text-sm text-gray-300">Message</label>
              <textarea required id="message" name="message" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
            </div>
            <button id="submit" type="submit" onclick="submitAlert" class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Submit</button>
          </form>
        </div>
      </section>

</Layout>

<style>
    body,form{
        background-color: #203162;
        color: aliceblue;
    }
</style>